generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int         @id @default(autoincrement())
  email    String      @unique
  login    String      @unique
  password String
  skills   UserSkill[]
}

model Skill {
  id     Int         @id @default(autoincrement())
  name   String      @unique
  status SkillStatus @default(PENDING)

  users UserSkill[]
}

model UserSkill {
  userId    Int
  skillId   Int
  level     SkillLevel
  confirmed Boolean    @default(false)

  user  User  @relation(fields: [userId], references: [id])
  skill Skill @relation(fields: [skillId], references: [id])

  @@id([userId, skillId])
}

enum SkillLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum SkillStatus {
  PENDING
  SUCCESS
  ERROR
}
